<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="App Center Configuration"
             x:Class="SampleApp.Views.AppCenterConfigPage">
  <StackLayout HorizontalOptions="Center"
               VerticalOptions="Center">
    <Label Text="App Center Secret:" />
    <Entry Text="{Binding Config.Secret}" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False" />
    <Button Text="Update Logger"
            Command="{Binding UpdateLoggerCommand}" />
  </StackLayout>
</ContentPage>